<div class="container" style="background-color: whitesmoke">
    <p>{{title}}</p>
    <div class="row">
        {{# each items}}
        <div class="col-sm">
            <img style="width: 400px; height:200px;" class="img-fluid rounded"src="{{this.url}}/{{this.name}}.png" alt="..." width="300">
            <figcaption class="figure-caption text-left">
                name: {{this.name}}
            </figcaption> 
            <a href="pictures/{{this.id}}"><button class="btn btn-primary">Show</button></a>
            <a href="pictures/update/{{this.id}}"><button class="btn btn-secondary">Update</button></a>
            <form action="pictures/delete" method="post" style="display: inline;">
                <button class="btn btn-danger" type="submit" name="id" id="{{this.id}}" value="{{this.id}}" class="btn-link">Delete</button>
            </form>
        </div> 
    {{/each}}
    </div>
    <br/>
    <div style="text-align: center;">
        <form action="pictures/create" method="get">
            <button class="btn btn-primary" type="submit" class="btn-link">Add Picture</button>
        </form>
    </div>